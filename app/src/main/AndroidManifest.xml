<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matorralesjordi.android.simon_says_game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_simon_game"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_simon_game_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Simon_Says_Game">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".SoloGameActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>